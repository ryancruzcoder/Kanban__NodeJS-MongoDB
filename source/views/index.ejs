<!doctype html>
<html lang="pt-br">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Kanban</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <body>

    <!-- Header -->
    <header class="container-fluid bg-dark p-3">
        <div class="row">
            <div class="col-2 text-start text-light">
                <h2 class="mx-5"><a class="nav-link" href="/">Kanban</a></h2>
            </div>
        </div>
    </header>
    
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-2"></div>
            <div class="col-8 p-5">

                <!-- Seção do "alert" -->
                <% if ( typeof alertType !== 'undefined' && typeof alertText !== 'undefined' ) { %>
                    <div class="alert alert-<%=alertType%> alert-dismissible" style="display: block;">
                        <%=alertText%>
                        <button class="btn btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <!-- Seção de Cadastro e Login -->
                <div class="row justify-content-center">

                    <!-- Seção de Cadastro -->
                    <section class="col">

                        <!-- Formulário de cadastro -->
                        <form action="/" method="post">
                            <h4>Cadastrar</h4>
                            <p>Preencha o formulário abaixo para fazer seu cadastro caso necessário.</p>
                            <div class="mb-3">
                              <label for="nome-de-cadastro" class="form-label">Nome e sobrenome:</label>
                              <input required type="text" class="form-control" id="nome-de-cadastro" name="nome-de-cadastro" maxlength="20">
                            </div>
                            <div class="mb-3">
                              <label for="cargo-de-cadastro" class="form-label">Cargo:</label>
                              <select required id="cargo-de-cadastro" name="cargo-de-cadastro" class="form-select">
                                <option>Assistente de Compras</option>
                                <option>Estagiário de Compras</option>
                                <option>Gerente de Compras</option>
                                <option>Assistente de T.I.</option>
                                <option>Estagiário de T.I.</option>
                                <option>Gerente de T.I.</option>
                                <option>Assistente de Financeiro</option>
                                <option>Estagiário de Financeiro</option>
                                <option>Gerente de Financeiro</option>
                                <option>Assistente de Marketing</option>
                                <option>Estagiário de Marketing</option>
                                <option>Gerente de Marketing</option>
                              </select>
                            </div>
                            <div class="mb-3">
                              <label for="email-de-cadastro" class="form-label">E-mail:</label>
                              <input required type="email" class="form-control" id="email-de-cadastro" name="email-de-cadastro" aria-describedby="emailHelp">
                            </div>
                            <div class="mb-3">
                              <label for="senha-de-cadastro" class="form-label">Senha</label>
                              <input required type="password" class="form-control" id="senha-de-cadastro" name="senha-de-cadastro" maxlength="20" minlength="8">
                            </div>
                            <div class="mb-3">
                                <label for="confirme-sua-senha-de-cadastro" class="form-label">Confirme sua senha:</label>
                                <input required type="password" class="form-control" id="confirme-sua-senha-de-cadastro" name="confirme-sua-senha-de-cadastro" maxlength="20" minlength="8">
                            </div>
                            <button type="submit" class="btn btn-primary">Cadastrar</button>
                        </form>

                    </section>

                    <!-- Seção de Login -->
                    <section class="col">

                        <!-- Formulário de Login -->
                        <form action="/kanban/" method="post">
                            <h4>Entrar</h4>
                            <p>Preencha o formulário abaixo para entrar ou faça seu cadastro.</p>
                            <div class="mb-3">
                              <label for="email-de-entrar" class="form-label">E-mail:</label>
                              <input required type="email" class="form-control" id="email-de-entrar" name="email-de-entrar" aria-describedby="emailHelp">
                            </div>
                            <div class="mb-3">
                              <label for="senha-de-entrar" class="form-label">Senha:</label>
                              <input required type="password" class="form-control" id="senha-de-entrar" name="senha-de-entrar" maxlength="20" minlength="8">
                            </div>
                            <button type="submit" class="btn btn-primary">Entrar</button>
                          </form>

                    </section>
                </div>
            </div>
            <div class="col-2"></div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>